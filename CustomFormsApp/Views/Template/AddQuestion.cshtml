@model CustomFormsApp.Models.Question
@{
    ViewData["Title"] = "Add Question";
}
<h2>Add Question</h2>

<form asp-action="AddQuestion" method="post">
    <input type="hidden" asp-for="TemplateId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Type">Question Type</label>
        <select asp-for="Type" class="form-control">
            <option value="SingleLineText">Single-Line Text</option>
            <option value="MultiLineText">Multi-Line Text</option>
            <option value="PositiveInteger">Positive Integer</option>
            <option value="Checkbox">Checkbox</option>
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="DisplayInResults" class="form-check-input" />
        <label asp-for="DisplayInResults" class="form-check-label">Display in Results</label>
    </div>

    <button type="submit" class="btn btn-primary">Add Question</button>
</form>
